@model Avanade.AllocationMonitor.Mvc.Models.UserLoginViewModel

@{
    ViewData["Title"] = "Login";
}

<div class="row justify-content-center">
    <div class="col-md-4" style="border-style: solid;">
        <form asp-action="Login" >
            <h1 style="text-align-last:center">Autenticazione</h1>
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <i class="far fa-user"></i>
                <label asp-for="UserName" class="control-label"></label>
                <input asp-for="UserName" class="form-control" />
                <span asp-validation-for="UserName" class="text-danger"></span>
            </div>

            <div class="form-group">
                <i class="fas fa-key"></i>
                <label asp-for="Password" class="control-label"></label>
                <input asp-for="Password" class="form-control" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>

            <div class="form-group input-icons">
                <i class="fas fa-lock icon"></i>
                <input type="submit" value="Login" class="btn btn-outline-primary input-field" style="padding-left:30px"/>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
